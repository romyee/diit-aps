<div class="page-header">
  <h1>Login</h1>
</div>
<%= form_tag({:action => "attempt_login"} , :class => "form-horizontal") do %>
	<div class="control-group string optional">
		<%= label_tag(:email, nil, :class => "string optional control-label") %>
		<div class="controls">
			<%= email_field_tag(:email) %>
		</div>
	</div>
	<div class="control-group string optional">
		<%= label_tag(:password, nil, :class => "string optional control-label") %>
		<div class="controls">
			<%= password_field_tag(:password) %>
		</div>
	</div>
  <div class="form-actions">
	<%= submit_tag "Login", :class => "btn btn-primary" %>
  </div>
<% end %>

