<%- model_class = ApplicationFormField -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:application_form_id) %>:</strong></dt>
  <dd><%= @application_form_field.application_form_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:form_field_id) %>:</strong></dt>
  <dd><%= @application_form_field.form_field_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:field_answer) %>:</strong></dt>
  <dd><%= @application_form_field.field_answer %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              application_form_fields_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_application_form_field_path(@application_form_field), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              application_form_field_path(@application_form_field),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
