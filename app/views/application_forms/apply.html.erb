<%- model_class = ApplicationForm -%>
<div class="page-header"> <h1><%= @from.title %> Request</h1></div>

<%= simple_form_for @application_form, :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.input :user_id, :as => :hidden, :input_html => { :value => session[:user_id] } %>
    <%= f.input :form_id, :as => :hidden, :input_html => { :value => @from.id } %>

    <% @fields.each do |field| %>
        <%= show_nested_models_fields(f, :application_form_fields, field) %>
    <% end %>

    <div class="form-actions">
      <%= f.button :submit, :value => "Submit Application", :class => 'btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  application_forms_path, :class => 'btn' %>
    </div>
<% end %>
