<%- model_class = ApplicationProcess -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:application_form_id) %></th>
      <th><%= model_class.human_attribute_name(:refferer_id) %></th>
      <th><%= model_class.human_attribute_name(:reffer_to_id) %></th>
      <th><%= model_class.human_attribute_name(:purpose) %></th>
      <th><%= model_class.human_attribute_name(:message) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @application_processes.each do |application_process| %>
      <tr>
        <td><%= link_to application_process.id, application_process_path(application_process) %></td>
        <td><%= application_process.application_form_id %></td>
        <td><%= application_process.refferer_id %></td>
        <td><%= application_process.reffer_to_id %></td>
        <td><%= application_process.purpose %></td>
        <td><%= application_process.message %></td>
        <td><%= application_process.status %></td>
        <td><%=l application_process.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_application_process_path(application_process), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      application_process_path(application_process),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_application_process_path,
            :class => 'btn btn-primary' %>
