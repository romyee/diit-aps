<%= simple_form_for @form_field, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :form %>
  <%= f.input :label %>
  <%= f.input :description, :input_html => {:size => "60x3"} %>
  <%= f.input :answer_type %>
  <%= f.input :mandetory %>
  <%= f.input :answer_opitons, :input_html => {:size => "60x3"} %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                form_fields_path, :class => 'btn' %>
  </div>
<% end %>
