<div class="page-header">
  <h1>Check Application Status</h1>
</div>
<%= form_tag({:action => "application_status"} , :class => "form-horizontal") do %>
	<div class="control-group string optional">
		<%= label_tag(:tracking_number, "Tracking Number", :class => "string optional control-label") %>
		<div class="controls">
			<%= text_field_tag(:tracking_number) %>
		</div>
	</div>
  <div class="form-actions">
	<%= submit_tag "Check Status", :class => "btn btn-primary" %>
  </div>
<% end %>

